<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradiente3"
    android:id="@+id/main">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/girl"
        android:scaleType="fitStart"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="@id/main"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"
        />

    <TextView
        android:id="@+id/Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lucia"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/girl"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"/>
    <TextView
        android:id="@+id/Edad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23 años"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/Nombre"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"/>
    <TextView
        android:id="@+id/Correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="luciasanz@gmail.com"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/Edad"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"/>
    <TextView
        android:id="@+id/github"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://github.com/Luciasanz"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/Correo"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"/>
    <TextView
        android:id="@+id/Instagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://www.instagram.com/luciasanz/"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/github"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"/>
    <TextView
        android:id="@+id/Sobremi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acerca de mi:"
        android:textSize="20dp"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/Instagram"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"/>

    <TextView
        android:id="@+id/datos"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:text="Vivio en logroño, soy una persona muy trabajadora, actualmete estoy compaginando mis estudios en informatica con mi trabajo en una panaderia, en mis ratos libres me gusta ver peliculas y pasar tiempo con mi perro."
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Sobremi"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintEnd_toEndOf="@id/main"/>

</androidx.constraintlayout.widget.ConstraintLayout>